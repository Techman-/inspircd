{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "configure",
			"type": "shell",
			"command": "./configure",
			"args": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"problemMatcher": []
		},
		{
			"label": "build",
			"type": "shell",
			"command": "make",
			"args": [
				"debug",
				"install"
			],
			"problemMatcher": "$gcc",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "make",
			"args": [
				"clean"
			],
			"problemMatcher": []
		}
	]
}
